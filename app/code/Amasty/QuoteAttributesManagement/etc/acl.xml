<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Sales::sales">
                    <resource id="Amasty_RequestQuote::quotes_operation">
                        <resource id="Amasty_QuoteAttributesManagement::attributes"  title="Custom Quote Fields" translate="title" sortOrder="10" />
                        <resource id="Amasty_QuoteAttributesManagement::attribute_new"  title="Custom Quote Fields New" translate="title" sortOrder="20" />
                        <resource id="Amasty_QuoteAttributesManagement::attribute_edit"  title="Custom Quote Fields Edit" translate="title" sortOrder="30" />
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
