<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="amasty_quote_attribute_entity" resource="default" engine="innodb" comment="Amasty Quote Entity">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="int" name="quote_id" unsigned="true" nullable="false" identity="false" comment="Quote ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>

    <table name="amasty_quote_attribute_eav_attribute" resource="default" engine="innodb" comment="Amasty Quote Attribute">
        <column xsi:type="smallint" name="attribute_id" unsigned="true" nullable="false" identity="false" comment="Attribute ID"/>
        <column xsi:type="smallint" name="is_visible" unsigned="true" nullable="false" identity="false" default="1" comment="Is Visible"/>
        <column xsi:type="varchar" name="input_filter" nullable="true" length="255" comment="Input Filter"/>
        <column xsi:type="smallint" name="multiline_count" unsigned="true" nullable="false" identity="false" default="1" comment="Multiline Count"/>
        <column xsi:type="text" name="validate_rules" nullable="true" comment="Validate Rules"/>
        <column xsi:type="smallint" name="is_system" unsigned="true" nullable="false" identity="false" default="0" comment="Is System"/>
        <column xsi:type="int" name="sort_order" unsigned="true" nullable="false" identity="false" default="0" comment="Sort Order"/>
        <column xsi:type="varchar" name="data_model" nullable="true" length="255" comment="Data Model"/>
        <column xsi:type="tinyint" name="used_in_grid" unsigned="true" nullable="false" identity="false" default="0" comment="Is Used in Grid"/>
        <column xsi:type="tinyint" name="is_visible_in_grid" unsigned="true" nullable="false" identity="false" default="0" comment="Is Visible in Grid"/>
        <column xsi:type="tinyint" name="filterable_in_grid" unsigned="true" nullable="false" identity="false" default="0" comment="Is Filterable in Grid"/>
        <column xsi:type="tinyint" name="is_searchable_in_grid" unsigned="true" nullable="false" identity="false" default="0" comment="Is Searchable in Grid"/>
        <column xsi:type="tinyint" name="is_include_in_pdf" unsigned="true" nullable="false" identity="false" default="0" comment="Is Include in Pdf"/>
        <column xsi:type="tinyint" name="is_include_in_email" unsigned="true" nullable="false" identity="false" default="0" comment="Is Include in Email"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="attribute_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="AMASTY_QUOTE_ATTRIBUTE_EAV_ATTRIBUTE_ATTRIBUTE_ID_EAV_ATTRIBUTE_ATTRIBUTE_ID"
                    table="amasty_quote_attribute_eav_attribute" column="attribute_id"
                    referenceTable="eav_attribute" referenceColumn="attribute_id"
                    onDelete="CASCADE"/>
        <index referenceId="AMASTY_QUOTE_ATTRIBUTE_EAV_ATTRIBUTE_SORT_ORDER" indexType="btree">
            <column name="sort_order"/>
        </index>
    </table>
    <table name="amasty_quote_attribute_eav_attribute_store" resource="default" engine="innodb" comment="Link Quote Attribute With Stores">
        <column xsi:type="smallint" name="attribute_id" unsigned="true" nullable="false" comment="Attribute ID" />
        <column xsi:type="smallint" name="store_id" unsigned="true" nullable="false" comment="Store ID"/>
        <constraint xsi:type="foreign"
                    referenceId="AMASTY_QUOTE_ATTRIBUTE_STR_ATTR_ID_AMASTY_QUOTE_ATTRIBUTE_ATTR_ID"
                    table="amasty_quote_attribute_eav_attribute_store"
                    column="attribute_id"
                    referenceTable="amasty_quote_attribute_eav_attribute"
                    referenceColumn="attribute_id"
                    onDelete="CASCADE" />
        <constraint xsi:type="foreign"
                    referenceId="AMASTY_QUOTE_ATTRIBUTE_STR_STR_ID_STORE_STORE_ID"
                    table="amasty_quote_attribute_eav_attribute_store"
                    column="store_id"
                    referenceTable="store"
                    referenceColumn="store_id"
                    onDelete="CASCADE" />
    </table>

    <table name="amasty_quote_attribute_entity_datetime" resource="default" engine="innodb" comment="Amasty Quote Entity Datetime">
        <column xsi:type="int" name="value_id" unsigned="false" nullable="false" identity="true" comment="Value ID"/>
        <column xsi:type="smallint" name="attribute_id" unsigned="true" nullable="false" identity="false" default="0" comment="Attribute ID"/>
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="false" default="0" comment="Entity ID"/>
        <column xsi:type="datetime" name="value" on_update="false" nullable="true" comment="Value"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="value_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_DATETIME_ATTRIBUTE_ID_EAV_ATTRIBUTE_ATTRIBUTE_ID"
                    table="amasty_quote_attribute_entity_datetime" column="attribute_id"
                    referenceTable="eav_attribute" referenceColumn="attribute_id"
                    onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_DATETIME_ENTITY_ID_AMASTY_QUOTE_ATTRIBUTE_ENTITY_ENTITY_ID"
                    table="amasty_quote_attribute_entity_datetime" column="entity_id"
                    referenceTable="amasty_quote_attribute_entity" referenceColumn="entity_id"
                    onDelete="CASCADE"/>
        <constraint xsi:type="unique" referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_DATETIME_ENTITY_ID_ATTRIBUTE_ID">
            <column name="entity_id"/>
            <column name="attribute_id"/>
        </constraint>
        <index referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_DATETIME_ATTRIBUTE_ID" indexType="btree">
            <column name="attribute_id"/>
        </index>
        <index referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_DATETIME_ENTITY_ID_ATTRIBUTE_ID_VALUE" indexType="btree">
            <column name="entity_id"/>
            <column name="attribute_id"/>
            <column name="value"/>
        </index>
    </table>
    <table name="amasty_quote_attribute_entity_decimal" resource="default" engine="innodb" comment="Amasty Quote Entity Decimal">
        <column xsi:type="int" name="value_id" unsigned="false" nullable="false" identity="true" comment="Value ID"/>
        <column xsi:type="smallint" name="attribute_id" unsigned="true" nullable="false" identity="false" default="0" comment="Attribute ID"/>
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="false" default="0" comment="Entity ID"/>
        <column xsi:type="decimal" name="value" scale="4" precision="12" unsigned="false" nullable="false" default="0" comment="Value"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="value_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_DECIMAL_ATTRIBUTE_ID_EAV_ATTRIBUTE_ATTRIBUTE_ID"
                    table="amasty_quote_attribute_entity_decimal" column="attribute_id"
                    referenceTable="eav_attribute" referenceColumn="attribute_id"
                    onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_DECIMAL_ENTITY_ID_AMASTY_QUOTE_ATTRIBUTE_ENTITY_ENTITY_ID"
                    table="amasty_quote_attribute_entity_decimal" column="entity_id"
                    referenceTable="amasty_quote_attribute_entity" referenceColumn="entity_id"
                    onDelete="CASCADE"/>
        <constraint xsi:type="unique" referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_DECIMAL_ENTITY_ID_ATTRIBUTE_ID">
            <column name="entity_id"/>
            <column name="attribute_id"/>
        </constraint>
        <index referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_DECIMAL_ATTRIBUTE_ID" indexType="btree">
            <column name="attribute_id"/>
        </index>
        <index referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_DECIMAL_ENTITY_ID_ATTRIBUTE_ID_VALUE" indexType="btree">
            <column name="entity_id"/>
            <column name="attribute_id"/>
            <column name="value"/>
        </index>
    </table>
    <table name="amasty_quote_attribute_entity_int" resource="default" engine="innodb" comment="Amasty Quote Entity Int">
        <column xsi:type="int" name="value_id" unsigned="false" nullable="false" identity="true" comment="Value ID"/>
        <column xsi:type="smallint" name="attribute_id" unsigned="true" nullable="false" identity="false" default="0" comment="Attribute ID"/>
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="false" default="0" comment="Entity ID"/>
        <column xsi:type="int" name="value" unsigned="false" nullable="false" identity="false" default="0" comment="Value"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="value_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_INT_ATTRIBUTE_ID_EAV_ATTRIBUTE_ATTRIBUTE_ID"
                    table="amasty_quote_attribute_entity_int" column="attribute_id"
                    referenceTable="eav_attribute" referenceColumn="attribute_id"
                    onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_INT_ENTITY_ID_AMASTY_QUOTE_ATTRIBUTE_ENTITY_ENTITY_ID"
                    table="amasty_quote_attribute_entity_int" column="entity_id"
                    referenceTable="amasty_quote_attribute_entity" referenceColumn="entity_id"
                    onDelete="CASCADE"/>
        <constraint xsi:type="unique" referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_INT_ENTITY_ID_ATTRIBUTE_ID">
            <column name="entity_id"/>
            <column name="attribute_id"/>
        </constraint>
        <index referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_INT_ATTRIBUTE_ID" indexType="btree">
            <column name="attribute_id"/>
        </index>
        <index referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_INT_ENTITY_ID_ATTRIBUTE_ID_VALUE" indexType="btree">
            <column name="entity_id"/>
            <column name="attribute_id"/>
            <column name="value"/>
        </index>
    </table>
    <table name="amasty_quote_attribute_entity_text" resource="default" engine="innodb" comment="Amasty Quote Entity Text">
        <column xsi:type="int" name="value_id" unsigned="false" nullable="false" identity="true" comment="Value ID"/>
        <column xsi:type="smallint" name="attribute_id" unsigned="true" nullable="false" identity="false" default="0" comment="Attribute ID"/>
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="false" default="0" comment="Entity ID"/>
        <column xsi:type="text" name="value" nullable="false" comment="Value"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="value_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_TEXT_ATTRIBUTE_ID_EAV_ATTRIBUTE_ATTRIBUTE_ID"
                    table="amasty_quote_attribute_entity_text" column="attribute_id"
                    referenceTable="eav_attribute" referenceColumn="attribute_id"
                    onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_TEXT_ENTITY_ID_AMASTY_QUOTE_ATTRIBUTE_ENTITY_ENTITY_ID"
                    table="amasty_quote_attribute_entity_text" column="entity_id"
                    referenceTable="amasty_quote_attribute_entity" referenceColumn="entity_id"
                    onDelete="CASCADE"/>
        <constraint xsi:type="unique" referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_TEXT_ENTITY_ID_ATTRIBUTE_ID">
            <column name="entity_id"/>
            <column name="attribute_id"/>
        </constraint>
        <index referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_TEXT_ATTRIBUTE_ID" indexType="btree">
            <column name="attribute_id"/>
        </index>
    </table>
    <table name="amasty_quote_attribute_entity_varchar" resource="default" engine="innodb" comment="Amasty Quote Entity Varchar">
        <column xsi:type="int" name="value_id" unsigned="false" nullable="false" identity="true"
                comment="Value ID"/>
        <column xsi:type="smallint" name="attribute_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Attribute ID"/>
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Entity ID"/>
        <column xsi:type="varchar" name="value" nullable="true" length="255" comment="Value"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="value_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_VARCHAR_ATTRIBUTE_ID_EAV_ATTRIBUTE_ATTRIBUTE_ID"
                    table="amasty_quote_attribute_entity_varchar" column="attribute_id"
                    referenceTable="eav_attribute" referenceColumn="attribute_id"
                    onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_VARCHAR_ENTITY_ID_AMASTY_QUOTE_ATTRIBUTE_ENTITY_ENTITY_ID"
                    table="amasty_quote_attribute_entity_varchar" column="entity_id"
                    referenceTable="amasty_quote_attribute_entity" referenceColumn="entity_id"
                    onDelete="CASCADE"/>
        <constraint xsi:type="unique" referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_VARCHAR_ENTITY_ID_ATTRIBUTE_ID">
            <column name="entity_id"/>
            <column name="attribute_id"/>
        </constraint>
        <index referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_VARCHAR_ATTRIBUTE_ID" indexType="btree">
            <column name="attribute_id"/>
        </index>
        <index referenceId="AMASTY_QUOTE_ATTRIBUTE_ENTITY_VARCHAR_ENTITY_ID_ATTRIBUTE_ID_VALUE" indexType="btree">
            <column name="entity_id"/>
            <column name="attribute_id"/>
            <column name="value"/>
        </index>
    </table>
</schema>
