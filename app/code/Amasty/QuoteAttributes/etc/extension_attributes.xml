<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Magento\Quote\Api\Data\CartInterface">
        <attribute code="quote_entity" type="Amasty\QuoteAttributes\Api\Data\QuoteEntityInterface">
            <join reference_table="amasty_quote_attribute_entity"
                  reference_field="quote_id"
                  join_on_field="entity_id">
                <field>entity_id</field>
                <field>quote_id</field>
            </join>
        </attribute>
    </extension_attributes>
    <extension_attributes for="Magento\Eav\Api\Data\AttributeInterface">
        <attribute code="amasty_stores" type="int[]" />
    </extension_attributes>
</config>
