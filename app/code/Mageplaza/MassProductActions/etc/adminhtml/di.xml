<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="Mageplaza\MassProductActions\Ui\DataProvider\Option\Form\Modifier\Pool" type="Magento\Ui\DataProvider\Modifier\Pool">
        <arguments>
            <argument name="modifiers" xsi:type="array">
                <item name="custom-options" xsi:type="array">
                    <item name="class" xsi:type="string">Mageplaza\MassProductActions\Ui\DataProvider\Option\Form\Modifier\CustomOptions</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                </item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Mageplaza\MassProductActions\Ui\DataProvider\Option\Form\OptionDataProvider">
        <arguments>
            <argument name="pool" xsi:type="object">Mageplaza\MassProductActions\Ui\DataProvider\Option\Form\Modifier\Pool</argument>
        </arguments>
    </type>
    <type name="Magento\Catalog\Ui\Component\Product\MassAction">
        <plugin name="mpmassproductactions-product-massAction" type="Mageplaza\MassProductActions\Plugin\Component\MassAction"/>
    </type>
    <type name="Magento\Ui\Component\MassAction">
        <plugin name="mpmassproductactions-component-massAction" type="Mageplaza\MassProductActions\Plugin\Component\OldMassAction"/>
    </type>
    <type name="Magento\Catalog\Model\ResourceModel\Product\Action">
        <plugin name="mpmassproductactions-product-resource-action" type="Mageplaza\MassProductActions\Plugin\Model\ResourceModel\Product\Action"/>
    </type>
    <type name="Mageplaza\MassProductActions\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Mageplaza\MassProductActions\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">mpmassproductactionsLogHandler</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">Mageplaza\MassProductActions\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
</config>
