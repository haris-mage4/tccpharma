<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="mpmassproductactions" translate="label" type="text" sortOrder="300" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
            <label>Mass Product Actions</label>
            <tab>mageplaza</tab>
            <resource>Mageplaza_MassProductActions::configuration</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                <label>General</label>
                <field id="enabled" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="actions" translate="label comment" type="multiselect" sortOrder="25" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Select Actions</label>
                    <frontend_model>Mageplaza\MassProductActions\Block\Adminhtml\System\Actions</frontend_model>
                    <backend_model>Mageplaza\MassProductActions\Model\Config\Backend\Actions</backend_model>
                    <comment><![CDATA[Admins can set the sort order for the position of each action. The smaller the sort order, the upper position of the action in the action grid.]]></comment>
                </field>
            </group>
        </section>
    </system>
</config>
